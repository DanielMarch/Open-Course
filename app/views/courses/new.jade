extends ../shared/template

block content
  .container
    .row.clearfix
        .col-md-12.column
          .page-header
            h1
              small Create A Course
          form(method='POST', action='/user/courses')
            .form-group
              label Course Name
              input.form-control(type='text', name='name', placeholder='Enter Course Name')
            .form-group
              label Course Description
              input.form-control(type='text',name='description', placeholder='Enter Course Description')
            .form-group
              label Course Subject
              select.form-control(type='text', name='subject')
                option Select Course Subject
                option Agriculture
                option Culinary
                option Computer Science
                option History
                option Math
                option Languages
                option Science
            button.btn.btn-default Create
