extends ../shared/template

block content
  .container
      .row.clearfix
          .col-md-12.column
            .page-header
              h1
                small Courses
            table.table.table-hover
              thead
                tr
                  th
                    | Course Name
                  th
                    | Course Subject
                  th
                    | Course Description
              tbody
                each course in courses
                  tr
                    td: a(href='/courses/#{course._id}')= course.name
                    td: a(href='/courses/filter/#{course.subject}')= course.subject
                    td= course.description
