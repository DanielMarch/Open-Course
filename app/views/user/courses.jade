extends ../shared/template

block content
  .container
      .row.clearfix
          .col-md-12.column
            .page-header
              h1
                small My Courses
            a.btn.btn-primary.btn-sm(href='/user/courses/new', type='button') Create New Course
            table.table.table-hover
              thead
                tr
                  th
                    | Course Name
                  th
                    | Course Subject
                  th
                    | Course Description
              tbody
                each course in courses
                  tr
                    td: a(href='/user/courses/#{course._id}')= course.name
                    td= course.subject
                    td= course.description
